{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es6",
      "dom"
    ]
  },
  "include": [
    "**/*.ts", 
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}